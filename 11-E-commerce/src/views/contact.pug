doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Guitar Store | E-commerce
    link(rel='icon' href='/img/icon.png')
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;700&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='/css/app.css')
header
    h1.title
        span Guitar
        |  Store
nav.navigation
    ul.container
        li
            a(href='index.html') Home
        li
            a(href='about.html') About Us
        li
            a(href='products.html') Shop
        li
            a(href='blog.html') Blog
        li
            a(href='contact.html') Contact Us
main.main-content.container
    h2 Fill all the fields
    form.form(action='process_form.php' method='post')
        fieldset
            legend Personal Information
            .personal-info
                label(for='name')
                    | Full Name:
                    input#name(type='text' name='name' required='')
                label(for='email')
                    | Email Address:
                    input#email(type='email' name='email' required='')
                label(for='phone')
                    | Phone Number:
                    input#phone(type='tel' name='phone')
        fieldset
            legend Reason for Contact
            .reason-contact
                label(for='reason')
                    | Reason for Contact:
                    input#reason-input(list='reason')
                    datalist#reason
                        option(value='inquiry') Product Inquiry
                        option(value='support') Technical Support
                        option(value='shipping') Shipping Information
                label(for='message')
                    | Message or Inquiry:
                    textarea#message(name='message' required='')
        fieldset.contact-preferences
            legend Contact Preferences
            label.container-radio(for='contact_email')
                input#contact_email(type='radio' name='contact_preference' value='email' checked='')
                span.checkmark
                |             Email
            label.container-radio(for='contact_phone')
                input#contact_phone(type='radio' name='contact_preference' value='phone')
                span.checkmark
                |             Phone
        fieldset
            legend Terms and Conditions
            .terms-conditions
                label.terms(for='terms')
                    input#terms(type='checkbox' name='terms' required='')
                    |               I agree to the Terms and Conditions
                    span.checkmark-checkbox
                input.btn-form(type='submit' value='Submit Inquiry')
footer.footer
    .container.grid-footer
        div
            h3 Categories
            ul
                li
                    a(href='#') Electric Guitars
                li
